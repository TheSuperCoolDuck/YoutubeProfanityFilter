{
    "name": "Youtube Profanity Filter",
    "version": "0.3",
    "manifest_version": 2,
    "description": "A Profanity Filter for YouTube",
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Profanity Filter"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs"]
}